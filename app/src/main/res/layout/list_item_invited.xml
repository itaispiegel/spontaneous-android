<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:background="#FF38476b"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_toEndOf="@+id/photo"
                android:layout_toRightOf="@+id/photo">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:text="Itai Spiegel"
                    android:includeFontPadding="false" />

            <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:text="It's gonna be LEGENDARY!"
                    android:lines="1"
                    android:includeFontPadding="true"/>

            <ImageView
                android:id="@+id/is_coming"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBaseline="@+id/description"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"/>
                <!--android:src="@drawable/abc_ic_clear_search_api_holo_light"/>-->

    </RelativeLayout>
</RelativeLayout>